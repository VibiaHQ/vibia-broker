{
  "compilerOptions": {
    "rootDir": "./js",
    "outDir": "./dist",
    "target": "ES2019",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "js/**.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}